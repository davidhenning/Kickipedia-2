{% include 'header.twig' with {'title': 'Liste'} %}
{% import 'tools.twig' as tools %}

<header>
    <h2>Eintrag bearbeiten</h2>
</header>
<div id="content">
    <form action="{{ formAction }}" method="post">
        <fieldset>
            <ul>
                <li>
                    Erstellt: {{ entry.createdOn|date("d.m.Y H:i:s") }}
                </li>
                <li>
                    Zuletzt aktualisiert: {{ entry.updatedOn|date("d.m.Y H:i:s") }}
                </li>
                <li>
                    <label for="name">Typ:</label>
                    <select name="entry[type]">
                        {% for value, name in types %}
                            <option value="{{ value }}" {% if entry.type == value %}selected {% endif %}>{{ name }}</option>
                        {% endfor %}
                    </select>
                </li>                
                <li>
                    <label for="name">Name:</label>
                    <input type="text" name="entry[name]" value="{{ entry.name }}">
                </li>
                <li>
                    <label for="name">Grund:</label>
                    <input type="text" name="entry[reason]" value="{{ entry.reason }}">
                </li>
                <li>
                    <label for="name">IP:</label>
                    <input type="text" name="entry[ip]" value="{{ entry.ip }}">
                </li>
                <input type="submit" value="Bearbeiten">          
            </ul>
        </fieldset>
    </form>
</div>

{% include 'footer.twig' %}